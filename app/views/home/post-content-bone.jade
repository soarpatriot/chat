<!-- Templates -->
script(type="text/template",id="item-template")
    div.row
        div.col-md-7
            div.media
                a('href=/users/<%- creator._id %>',class='pull-left')
                    img('src=<%- creator.thumbnails %>',class='img-rounded img-thumbnail thumbnail-face')
                div.media-body
                    h5.media-heading
                        p.padding-top5
                            a('href=/posts/<%- _id %>') <%- title %>


        div.col-md-4

                span.text-warning.small <%- location %>
        div.col-md-1
            div.pull-right
                span(class='badge') 评论 <%= comments.length %>


    div.row
        div.col-md-12
            p.blog-content.word-break-wrap
                a('href=/posts/<%- _id %>') <%- content %>
    div.row
        div.col-md-12

script(type="text/template",id="image-template")  

            div(class='thumb-image','name=<%- id %>')
                a('class=<%- id %>','href=<%- url %>')
                    img('src=<%- thumbnailUrl %>',class='img-thumbnail image-post-thumbnail')

<!-- Templates -->
script(type="text/template",id="up-down-template")       
    div.clearfix                
    div.row
        div.col-md-7
            div.row
                
                div(name='up-post-div',class='up-down')
                    a(name='up-post',class='btn btn-default btn-sm up','data=<%- _id %>')
                        span(class='glyphicon glyphicon-thumbs-up')
                        | 顶(<%- up %>)

                div(name='down-post-div',class='up-down')
                    a(name='down-post',class='btn btn-default btn-sm down')
                        span(class='glyphicon glyphicon-thumbs-down')
                        | 踩(<%- down %>)

    div.row
        div.col-md-12
            div.pull-left
                p.text-muted.small
                    | • <%- looked %> 次浏览


            div.pull-right
                p.text-muted.small
                    <%- creator.name %> 发表于 <%- fromNow %>

    hr.soft

extends ../layouts/main-layout

block append head

block content
    body
        div.row
            div.col-md-12
                ol.breadcrumb
                    li
                        a(href='/tags') 标签列表
                    li.active 添加tag



        div.row
            div.col-md-12
                form(action='/tags',method='post')
                    legend 添加标签
                    div.form-group
                        div.row
                            div.col-md-6
                                label(for='key') 关键字：
                                input(name='tag[key]',type='text',class='form-control',placeholder='最多40字符',type='text',value='#{tag.key}',maxlength='40',required,data-validation-maxlength-message='标题不能超过40个字符！')
                        div.row
                            div.col-md-6
                                label(for='name') 名称：
                                input(name='tag[name]',type='text',class='form-control',placeholder='最多40字符',type='text',value='#{tag.name}',maxlength='40',required,data-validation-maxlength-message='标题不能超过40个字符！')
                    div.form-group
                        label( for='content') 描述：
                        div.row
                            div.col-md-12
                                textarea(id='editor-area',class='form-control', name='tag[description]',rows='10',placeholder='最多2000字符',type='text',maxlength='2000',required,data-validation-maxlength-message='内容不能超过2000个字符！')
                                    | #{tag.description}
                    div.form-group
                        button(type='submit', class='btn btn-success') 添加
        <!-- guide dialog -->
        div(id='guide-makedown',class='modal fade', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            div.modal-dialog.width70percent
                div.modal-content
                    div.modal-header
                        button(type='button',class='close',data-dismiss='modal',aria-hidden='true')
                            &times;
                        h5 编辑器使用说明


                    div.modal-footer
                        p powered by github makedown
        script(data-main='/build/app/post-article',src='/javascripts/require.js?v=#{appVersion}')
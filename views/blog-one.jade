extends layout

block append head

block content
    body
        div.row-fluid
            div.span12
                include includes/share

        div.row-fluid
            div.span12
                div.discussion-bubble
                    img(src='#{post.creator.thumbnails}',class='discussion-bubble-avatar img-polaroid img-rounded')
                    div(class='discussion-bubble-content bubble')
                        div(class='discussion-bubble-inner')
                            div(class='discussion-topic-header')
                                a(href='#user',class='discussion-topic-author') #{post.creator.name}
                                time #{post.fromNow}
                                h2(class='discussion-topic-title') #{post.title}
                            div.discusion-topic-infobar
                                | OK

                            div(class='comment-content')
                                !{post.content}
        hr
        div.row-fluid
            div.span12
                form(class='form-inline center',action='/comment',method='post')

                      div.control-group

                          div.controls
                              input(name='postId',type='hidden',value='#{post._id}')
                              textarea(class='span6', name='content',rows='2',placeholder='发表评论')
                      div.control-group
                          div.controls
                              button(type='submit', class='btn btn-success') 发言
        hr.soft
        div.row-fluid
            h4 #{post.comments.length} 评论

        each comment, i in post.comments
            div.row-fluid
                div.span12
                    div.discussion-bubble
                        img(src='#{comment.creator.thumbnails}',class='discussion-bubble-avatar img-polaroid img-rounded')
                        div(class='discussion-bubble-content bubble')
                            div(class='discussion-bubble-inner')
                                div(class='comment-header')
                                    a(href='#user',class='comment-header-author') #{comment.creator.name}
                                    span(class='pull-right comment-header-date') #{comment.fromNow}

                                div(class='comment-content')
                                    !{comment.content}







             
      
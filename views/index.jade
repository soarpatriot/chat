extends layout

block append head

block content
  body
    h1= title
    p Welcome to #{title}

    if typeof(posts) != 'undefined' && post.length > 0
      each post, i in posts
        if i % 3 == 0
          div.fluid-row
        div.span3
          h3 #{post.user} say:
          small #{post.time}
          p #{post.post}

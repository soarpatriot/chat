extends layout


block append head
     script
       $(function(){
         $('.popover-test').popover()
       })

block content
  body
    div.row-fluid

       div(class='span8 well-no-back')
         h3.title 最新
         hr
         if typeof(posts) !== 'undefined' && posts !== null && posts.length > 0
           each post, i in posts
              div.row-fluid
                div.span10
                   p
                     img(src='#{post.creator.faceUrl}',alt='user')
                     |  #{post.creator.name} #{post.fromNow}



                   p
                      nobr #{post.content}
              hr.soft


       div(class='span4 well')
           h3.title 相关信息




include display-nav

div.navbar.navbar-inverse.navbar-fixed-top
  div.navbar-inner
    div.container
      a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.brand(href='/') 翱翔中国
      div.nav-collapse.collapse
          ul.nav

            mixin nav-active
              a(href='/') 主页
            li
              a(href='/post') 微薄
            li
              a(href='/chat') 审阅


            li
              a(href='/chat') 聊天
            li
              a(href='/chat') 关于

            li
              form(class='form-search navbar-form pull-right')
                div(class='btn-group input-append')
                    input(type='text',class='span2 search-query',placeholder='Search')
                    button(type='submit',class='btn')
                      i(class='icon-search')
                      | Search

          ul.nav.pull-right
            if typeof(user) === 'undefined' || user === null

                li.vertical-align.li-padding
                  span.height-auto
                   a(href='/login') [登录]
                   &nbsp / &nbsp
                   a(href='/reg') [注册]


            else
                li.dropdown
                  a(class='dropdown-toggle', href='#', data-toggle='dropdown')
                    i(class='icon-user')
                    | #{user.name}
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='/user') 我的资料
                    li
                      a(href='/u/#{user.name}') 我的微波

                    li.divider
                    li.nav-header Nav header
                    li
                      a(href='#') Separated link
                    li
                      a(href='#') One more separated link
                li
                  a(href='/logout') 退出


